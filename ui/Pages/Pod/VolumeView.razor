<Divider Orientation="left" Style="font-weight:bold">Volumes</Divider>
<Descriptions  Bordered Column="1">
    @foreach (var v in PodItem.Spec.Volumes)
    {
        <DescriptionsItem Title="@v.Name">
            @if (v.HostPath != null)
            {
                <Tag Icon="hdd" PresetColor="@PresetColor.Blue">HostPath @v.HostPath.Type</Tag>
                <Tag> @v.HostPath.Path</Tag>
            }
            @if (v.Projected != null)
            {
                <Tag Icon="hdd">Projected</Tag>
            }
            @if (v.ConfigMap != null)
            {
                <Tag Icon="hdd" PresetColor="@PresetColor.Orange">ConfigMap @v.ConfigMap.Name</Tag>
                @if (v.ConfigMap.Items != null)
                {@foreach (var p in v.ConfigMap.Items)
                    {
                        <Tag>@p.Key @p.Path</Tag>
                    }
            }

            }
            @if (v.EmptyDir != null)
            {
                <Tag Icon="hdd" PresetColor="@PresetColor.GeekBlue">EmptyDir @v.EmptyDir.Medium</Tag>
                <Tag>"Size:"@v.EmptyDir.SizeLimit</Tag>
            }
            @if (v.Secret != null)
            {
                <Tag Icon="hdd" PresetColor="@PresetColor.Pink">Secret @v.Secret.SecretName</Tag>
                @if (v.Secret.Items != null)
                {
                    @foreach (var p in v.Secret.Items)
                    {
                        <Tag>@p.Key @p.Path</Tag>
                    }
                }
            }

            @if (v.DownwardAPI != null)
            {

                @foreach (var p in v.DownwardAPI.Items)
                {
                    <Tag Icon="hdd" PresetColor="@PresetColor.Green">DownwardAPI @p.Path</Tag>
                    <Tag>@p.FieldRef @p.FieldRef.FieldPath</Tag>
                    <Tag>@p.ResourceFieldRef @p.ResourceFieldRef.Resource</Tag>
                }
            }
        </DescriptionsItem>
    }
</Descriptions>