@page "/NodeList"
@using Extension
@using Extension.k8s
@if (_nodes == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    foreach (var node in _nodes)
    {
        <Card style="width: 18rem;">
            <CardBody>
                <h5 class="card-title">@node.Name</h5>
                <p class="card-text">@node.Architecture</p>
                <p class="card-text">@node.KubeletVersion</p>
                <p class="card-text">@_jsonNode.Metadata.CreationTimestamp?.Age()</p>
                <p class="card-text">
                     @if (_jsonNode.Status.Conditions.IsReady())
                    {
                        <Tag Icon="fa fa-check-circle" Color="Color.Success">Ready</Tag>
                    }
                </p>
                @foreach (var x in node.Addresses)
                {
                    <p class="card-text"> @x.Type - @x.Address </p>
                }

                @foreach (var kv in node.Capacity)
                {
                    <p class="card-text">
                        @kv.ToString()
                    </p>
                }
                @foreach (var kv in node.Allocatable)
                {
                    <p class="card-text">
                        @kv.ToString()
                    </p>
                }




            </CardBody>
        </Card>
    }
}
