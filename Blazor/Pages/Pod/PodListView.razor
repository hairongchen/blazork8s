@using k8s.Models
@using Extension.k8s
@if (Pods.Count > 0)
{
    <Divider Orientation="left" Style="font-weight:bold">Pod</Divider>
    <Table TItem="V1Pod" DataSource="@Pods"
           HidePagination="true" PageSize="5000"
           Size=@TableSize.Small Bordered="true"
           OnRowClick="OnRowClick">
        <AntDesign.Column Sortable="true" TData="string" Title="Name"
                          SorterCompare="@((a, b) => a.Length - b.Length)"
                          Field="@context.Name()"/>
        <AntDesign.Column Sortable="true" TData="string" Title="NameSpace" Field="@context.Namespace()"/>
        <AntDesign.Column Sortable="true" TData="string" Title="Ready">@context.ReadySummary()</AntDesign.Column>
        <AntDesign.Column Sortable="true" TData="string" Title="Status">@context.Status()</AntDesign.Column>
    </Table>
}
