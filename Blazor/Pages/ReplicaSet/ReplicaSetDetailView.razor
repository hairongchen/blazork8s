@using k8s.Models
@using Blazor.Pages.Container
@using Blazor.Pages.Event
@using Blazor.Pages.Workload
@using Extension
@using Extension.k8s
@inherits FeedbackComponent<V1ReplicaSet, bool>
@if (RsItem != null)
{
    <Descriptions Bordered Column="1">
        <DescriptionsItem Title="创建时间">
            @RsItem.Metadata.CreationTimestamp?.AgeFromUtc()
            (@RsItem.Metadata.CreationTimestamp)
        </DescriptionsItem>
        <DescriptionsItem Title="Name">
            <Text Copyable>@RsItem.Name()</Text>
        </DescriptionsItem>
        <DescriptionsItem Title="Namespace">@RsItem.Namespace()</DescriptionsItem>

        <DescriptionsItem Title="Controlled By">
            <ControllerBy Owner=@RsItem.OwnerReferences()></ControllerBy>
        </DescriptionsItem>
        <LabelsView Labels="@RsItem.Labels()"></LabelsView>
        <AnnotationsView Annotations="@RsItem.Annotations()"></AnnotationsView>
        <SelectorView Title="Selector" Selector="@RsItem.Spec.Selector.MatchLabels"></SelectorView>
        <SelectorView Title="Node Selector" Selector="@RsItem.Spec.Template.Spec.NodeSelector"></SelectorView>
        <DescriptionsItem Title="Replicas">
            @($"{RsItem.Status.AvailableReplicas??0} current / {RsItem.Status.Replicas} desired")
        </DescriptionsItem>
        <ImagesView PodSpec="@RsItem.Spec.Template.Spec"></ImagesView>
    </Descriptions>
    <EventListView Uid="@RsItem.Metadata.Uid"></EventListView>
}
