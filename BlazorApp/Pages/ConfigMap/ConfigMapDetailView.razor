@using k8s.Models
@using BlazorApp.Pages.Common.Metadata
@using BlazorApp.Pages.Event
@using BlazorApp.Pages.Common;
@inherits DrawerPageBase<V1ConfigMap>
@if (ConfigMap != null)
{
    <ConfigMapAction Item="ConfigMap" MenuMode="MenuMode.Horizontal"  ></ConfigMapAction>
    <Divider Orientation="left" Style="font-weight:bold">Metadata</Divider>
    <MetadataView Item="ConfigMap" T="V1ConfigMap" ExplainFieldPrefix="configMap"></MetadataView>
    <Divider Orientation="left" Style="font-weight:bold">Spec</Divider>
    <Descriptions Bordered Column="1">
        <DescriptionsItem Title="Name">
            @ConfigMap.Name()
        </DescriptionsItem>
                <PropertySimpleView Title="BinaryData" Item="@ConfigMap.BinaryData" ExplainField="configMap.binaryData"  ShowInJson="true" ></PropertySimpleView>
                <PropertySimpleView Title="Data" Item="@ConfigMap.Data" ExplainField="configMap.data"  ShowInJson="true" ></PropertySimpleView>
                <PropertySimpleView Title="Immutable" Item="@ConfigMap.Immutable" ExplainField="configMap.immutable" ></PropertySimpleView>
    </Descriptions>
 <Divider Orientation="left" Style="font-weight:bold">Status</Divider>
    <Descriptions Bordered Column="1">
    </Descriptions>
    <MiniEventListView Uid="@ConfigMap.Metadata.Uid"></MiniEventListView>
}