@using BlazorApp.Pages.Common.Metadata
@using BlazorApp.Pages.Event
@using BlazorApp.Pages.Common.Html.HTable
@inherits BlazorApp.Pages.Common.DrawerPageBase<k8s.Models.V1ConfigMap>
@if (ConfigMap != null)
{
    <ConfigMapAction Item="ConfigMap" MenuMode="MenuMode.Horizontal"></ConfigMapAction>
    <Divider Orientation="left" Style="font-weight:bold">@L["Metadata"]</Divider>
    <MetadataView Item="ConfigMap.Metadata" ExplainFieldPrefix="configMap"></MetadataView>
    <HTable Bordered Column="1">
        <PropertySimpleView Title=@L["Immutable"] Item="@ConfigMap.Immutable" ExplainField="configMap.immutable"></PropertySimpleView>
    </HTable>
    <ConfigMapDataView Data="@ConfigMap.Data" Title=@L["Data"]></ConfigMapDataView>
    <MiniEventListView Uid="@ConfigMap.Metadata.Uid"></MiniEventListView>
}
