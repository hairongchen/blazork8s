@using BlazorApp.Pages.Common
@using k8s.Models
@inherits BlazorApp.Pages.Common.PageBase

<ShareMenuItem T="V1StatefulSet" Item="Item" MenuMode="MenuMode">
    @if (MenuMode == MenuMode.Vertical)
    {
        <MenuItem OnClick="@(() => OnRestartClick(Item))">Title=@L["Restart"]</MenuItem>
        <MenuItem OnClick="@(() => OnScaleClick(Item))">Title=@L["Scale"]</MenuItem>
    }
    @if (MenuMode == MenuMode.Horizontal)
    {
        <Button OnClick="@(() => OnRestartClick(Item))">Title=@L["Restart"]</Button>
        <Button OnClick="@(() => OnScaleClick(Item))">Title=@L["Scale"]</Button>
    }
</ShareMenuItem>
