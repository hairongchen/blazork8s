@using BlazorApp.Utils
@if (Ref != null)
{
    <Tag Color="@RandomColorHelper.RandomColor()" OnClick="@OnObjClick" Style="cursor: pointer">
        @if (FullView)
        {
            @($"{Ref.Kind} {Ref.NamespaceProperty} {Ref.Name}")
        }
        else
        {
            <Tooltip>
                <TitleTemplate>
                    @($"[{Ref.Kind}] {Ref.NamespaceProperty} {Ref.Name}")
                </TitleTemplate>
                <ChildContent>
                    @($"{Ref.Kind}")
                </ChildContent>
            </Tooltip>
        }

    </Tag>
}

