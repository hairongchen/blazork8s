@using Extension
@using BlazorApp.Utils
@inherits BlazorApp.Pages.Common.PageBase

@if (Ref != null)
{
    <Tag Color="@RandomColorHelper.RandomColor()" OnClick="@OnObjClick" Style="cursor: pointer">
        <Tooltip>
            <TitleTemplate>
                @($"[{Ref.Kind}]  {Ref.ApiVersion} {Ref.NamespaceProperty} {Ref.Name}")
            </TitleTemplate>
            <ChildContent>
                @if (FullView)
                {
                    @if (Ref.NamespaceProperty.IsNullOrWhiteSpace())
                    {
                        @($"{Ref.Kind} {Ref.Name}")
                    }
                    else
                    {
                        @($"{Ref.Kind} {Ref.NamespaceProperty}/{Ref.Name}")

                    }
                }
                else
                {
                    @($"{Ref.Kind}")
                }
            </ChildContent>
        </Tooltip>
    </Tag>
}
