@using Extension
@inherits PageBase

@if (Ref != null)
{
    <ColorfulTag OnClick="@OnObjClick" Style="cursor: pointer" ColorKey="@Ref.Kind">
        <Tooltip>
            <TitleTemplate>
                @($"[{Ref.Kind}]  {Ref.ApiVersion} {Ref.NamespaceProperty} {Ref.Name}")
            </TitleTemplate>
            <ChildContent>
                @if (FullView)
                {
                    @if (Ref.NamespaceProperty.IsNullOrWhiteSpace())
                    {
                        @($"{Ref.Kind} {Ref.Name}")
                    }
                    else
                    {
                        @($"{Ref.Kind} {Ref.NamespaceProperty}/{Ref.Name}")
                    }
                }
                else
                {
                    @($"{Ref.Kind}")
                }
            </ChildContent>
        </Tooltip>
    </ColorfulTag>
}
