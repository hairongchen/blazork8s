@inherits PageBase
@using BlazorApp.Pages.Common.Html
@typeparam            T
@if (Items is { Count: > 0 })
{
    <HTableColumn Title=@Title ExplainField="@ExplainField">
        @foreach (var p in Items)
        {
            <ColorfulTag>
                @if (IsBasicType())
                {
                    @p
                }
                else
                {
                    @GetValue(p)
                }
            </ColorfulTag>
        }
    </HTableColumn>
}
