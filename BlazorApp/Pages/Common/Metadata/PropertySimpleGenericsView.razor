@typeparam            T
@using BlazorApp.Pages.Common.Html
@using Microsoft.IdentityModel.Tokens
@inherits PageBase

@if (Item != null)
{
    <HTableColumn Title="@Title" ExplainField="@ExplainField">
        <ColorfulTag OnClick="OnTagClick">

            @if (IsString)
            {
                @($"{Item.ToString()}")
            }

            @if (!Key.IsNullOrEmpty())
            {
                @GetValue(Item)
            }

        </ColorfulTag>
    </HTableColumn>
}
