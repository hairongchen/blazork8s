@using k8s.Models
@using BlazorApp.Pages.Common.Html
@using BlazorApp.Utils
@inherits BlazorApp.Pages.Common.PageBase

@if (RollingUpdate != null)
{
    <HTableColumn Title="@Title" ExplainField="@ExplainField">
        @if (RollingUpdate.MaxSurge != null)
        {
            <Tag Color="@RandomColorHelper.RandomColor()">
                @L["MaxSurge"] = @RollingUpdate.MaxSurge
            </Tag>
        }

        @if (RollingUpdate.MaxUnavailable != null)
        {
            <Tag Color="@RandomColorHelper.RandomColor()">
                @L["MaxUnavailable"] = @RollingUpdate.MaxUnavailable
            </Tag>
        }
        @if (ChildContent != null)
        {
            @ChildContent
        }
    </HTableColumn>
}

@code {

    [Parameter]
    public V1RollingUpdateDeployment RollingUpdate { get; set; }

    [Parameter]
    public string ExplainField { get; set; }

    [Parameter]
    public string Title { get; set; }

    [Parameter]
#nullable enable
    public RenderFragment? ChildContent { get; set; }


}
