@using BlazorApp.Pages.Common.Html
@using k8s.Models
@inherits PageBase

@if (RollingUpdate != null)
{
    <HTableColumn Title="@Title" ExplainField="@ExplainField">
        @if (RollingUpdate.MaxSurge != null)
        {
            <ColorfulTag>
                @L["MaxSurge"] = @RollingUpdate.MaxSurge
            </ColorfulTag>
        }

        @if (RollingUpdate.MaxUnavailable != null)
        {
            <ColorfulTag>
                @L["MaxUnavailable"] = @RollingUpdate.MaxUnavailable
            </ColorfulTag>
        }
        @if (ChildContent != null)
        {
            @ChildContent
        }
    </HTableColumn>
}

@code {

    [Parameter] public V1RollingUpdateDeployment RollingUpdate { get; set; }

    [Parameter] public string ExplainField { get; set; }

    [Parameter] public string Title { get; set; }

    [Parameter]
#nullable enable
    public RenderFragment? ChildContent { get; set; }


}
