@using BlazorApp.Pages.Common.Html
@using BlazorApp.Pages.Container
@inherits BlazorApp.Pages.Common.PageBase

@if (PodSpec != null)
{
    <HTableColumn Title="Images">
        @if (PodSpec.Containers != null)
        {
            @foreach (var c in PodSpec.Containers)
            {
                <Paragraph >
                    <ContainerType Type="Main"></ContainerType>
                    <Text Copyable>@c.Image</Text>
                </Paragraph>
            }
        }
        @if (PodSpec.InitContainers != null)
        {
            @foreach (var c in PodSpec.InitContainers)
            {
                <Paragraph >
                    <ContainerType Type="Init"></ContainerType>
                    <Text Copyable>@c.Image</Text>
                </Paragraph>
            }
        }
        @if (PodSpec.EphemeralContainers != null)
        {
            @foreach (var c in PodSpec.EphemeralContainers)
            {
                <Paragraph >
                    <ContainerType Type="Ephemeral"></ContainerType>
                    <Text Copyable>@c.Image</Text>
                </Paragraph>
            }
        }
    </HTableColumn>
}
