@using BlazorApp.Pages.Common.Html
@using BlazorApp.Utils
@inherits PageBase

@if (Labels != null)
{
    <HTableColumn Title=@L["Labels"] ExplainField="@ExplainField">
        @foreach (var label in Labels)
        {
            <ColorfulTag Color="@RandomColorHelper.RandomColor()">@label.Key = @label.Value</ColorfulTag>
        }
    </HTableColumn>
}

@code {


    [Parameter] public IDictionary<string, string> Labels { get; set; }

    [Parameter] public string ExplainField { get; set; }

}
