@using BlazorApp.Pages.Common.Html
@using BlazorApp.Utils
@if (Labels != null)
{
    <HTableColumn Title=@L["Labels"] ExplainField="@ExplainField">
        @foreach (var label in Labels)
        {
            <Paragraph Copyable>
                <Tag Color="@RandomColorHelper.RandomInverseColor()">@label.Key = @label.Value</Tag>
            </Paragraph>
        }
    </HTableColumn>
}

@code {

    [Inject]
    public IStringLocalizer L { get; set; }

    [Parameter]
    public IDictionary<string, string> Labels { get; set; }

    [Parameter]
    public string ExplainField { get; set; }

}
