@using BlazorApp.Pages.Common.Html
@using k8s.Models
@inherits PageBase

@if (Taints != null)
{
    <HTableColumn Title=@L["Taints"]>

        <Collapse>
            <Panel Key="1">
                <HeaderTemplate>
                    <Badge Count="@Taints.Count"/>
                </HeaderTemplate>
                <ChildContent>
                    <Table TItem="V1Taint" DataSource="Taints"
                           HidePagination="true" PageSize="5000"
                           Size=@TableSize.Small Bordered="true">
                        <AntDesign.Column Title=@L["Key"] Field="@context.Key"/>
                        <AntDesign.Column Title=@L["Value"]>@context.Value</AntDesign.Column>
                        <AntDesign.Column Title=@L["Effect"]>@context.Effect</AntDesign.Column>
                        <AntDesign.Column Title=@L["Time"] Field="@context.TimeAdded"/>

                    </Table>
                </ChildContent>
            </Panel>
        </Collapse>
    </HTableColumn>
}
