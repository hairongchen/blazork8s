@using k8s.Models
@using BlazorApp.Pages.Common.Metadata
@using BlazorApp.Pages.Event
@using BlazorApp.Pages.Common;
@inherits DrawerPageBase<V1Secret>
@if (Item != null)
{
    <SecretAction Item="Item" MenuMode="MenuMode.Horizontal"  ></SecretAction>
    <MetadataView Item="Item" T="V1Secret"></MetadataView>
    <Descriptions Bordered Column="1">
        <DescriptionsItem Title="Name"  LabelStyle="width:120px">
            @Item.Name()
        </DescriptionsItem>
    </Descriptions>
    <MiniEventListView Uid="@Item.Metadata.Uid"></MiniEventListView>
}
