@using BlazorApp.Pages.Common.Metadata
@using BlazorApp.Pages.Event
@using BlazorApp.Pages.Common.Html.HTable
@inherits BlazorApp.Pages.Common.DrawerPageBase<k8s.Models.V1Secret>
@if (Secret != null)
{
    <SecretAction Item="Secret" MenuMode="MenuMode.Horizontal"></SecretAction>
    <Divider Orientation="left" Style="font-weight:bold">@L["Metadata"]</Divider>
    <MetadataView Item="Secret.Metadata" ExplainFieldPrefix="secret"></MetadataView>
    <Divider Orientation="left" Style="font-weight:bold">@L["Spec"]</Divider>
    <HTable Bordered Column="1">
        <PropertyOptionView Title="Type" Item="@Secret.Type" ExplainField="secret.type" Options="@(new[] { "Opaque", "kubernetes.io/tls", "kubernetes.io/dockerconfigjson", "kubernetes.io/service-account-token", "kubernetes.io/dockercfg", "kubernetes.io/basic-auth", "kubernetes.io/ssh-auth", "bootstrap.kubernetes.io/token", "kubernetes.io/iscsi-chap" })"></PropertyOptionView>
        <PropertySimpleView Title="Immutable" Item="@Secret.Immutable" ExplainField="secret.immutable"></PropertySimpleView>
    </HTable>
    <SecretDataView Data="@Secret.Data" Title=@L["Data"]></SecretDataView>

    <MiniEventListView Uid="@Secret.Metadata.Uid"></MiniEventListView>
}
