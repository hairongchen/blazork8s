@using BlazorApp.Pages.Common.Metadata
@using BlazorApp.Pages.Event
@using BlazorApp.Pages.Common.Html.HTable
@inherits BlazorApp.Pages.Common.DrawerPageBase<k8s.Models.V1Secret>
@if (Secret != null)
{
    <SecretAction Item="Secret" MenuMode="MenuMode.Horizontal"></SecretAction>
    <Divider Orientation="left" Style="font-weight:bold">Metadata</Divider>
    <MetadataView Item="Secret.Metadata" ExplainFieldPrefix="secret"></MetadataView>
    <Divider Orientation="left" Style="font-weight:bold">Spec</Divider>
    <HTable Bordered Column="1">
        <PropertySimpleView Title="Type" Item="@Secret.Type" ExplainField="secret.type"></PropertySimpleView>
        <PropertySimpleView Title="Data" Item="@Secret.Data" ExplainField="secret.data" ShowInJson="true"></PropertySimpleView>
        <PropertySimpleView Title="Immutable" Item="@Secret.Immutable" ExplainField="secret.immutable"></PropertySimpleView>
        <PropertySimpleView Title="StringData" Item="@Secret.StringData" ExplainField="secret.stringData" ShowInJson="true"></PropertySimpleView>
    </HTable>
    <Divider Orientation="left" Style="font-weight:bold">Status</Divider>
    <HTable Bordered Column="1">
    </HTable>
    <MiniEventListView Uid="@Secret.Metadata.Uid"></MiniEventListView>
}
