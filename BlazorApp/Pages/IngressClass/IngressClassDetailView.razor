@using k8s.Models
@using BlazorApp.Pages.Common.Metadata
@using BlazorApp.Pages.Event
@inherits BlazorApp.Pages.Common.DrawerPageBase<V1IngressClass>
@if (IngressClass != null)
{
    <IngressClassAction Item="IngressClass" MenuMode="MenuMode.Horizontal"  ></IngressClassAction>
    <Divider Orientation="left" Style="font-weight:bold">Metadata</Divider>
    <MetadataView Item="IngressClass.Metadata"  ExplainFieldPrefix="ingressClass"></MetadataView>
    <Divider Orientation="left" Style="font-weight:bold">Spec</Divider>
    <Descriptions Bordered Column="1">
        <DescriptionsItem Title="Name">
            @IngressClass.Name()
        </DescriptionsItem>
                <PropertySimpleView Title="Controller" Item="@IngressClass.Spec.Controller" ExplainField="ingressClass.spec.controller" ></PropertySimpleView>
                <PropertySimpleView Title="Parameters" Item="@IngressClass.Spec.Parameters" ExplainField="ingressClass.spec.parameters"  ShowInJson="true" ></PropertySimpleView>
    </Descriptions>
 <Divider Orientation="left" Style="font-weight:bold">Status</Divider>
    <Descriptions Bordered Column="1">
    </Descriptions>
    <MiniEventListView Uid="@IngressClass.Metadata.Uid"></MiniEventListView>
}
