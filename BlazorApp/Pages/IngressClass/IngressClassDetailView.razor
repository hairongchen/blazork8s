@using BlazorApp.Pages.Common.Html.HTable
@using BlazorApp.Pages.Common.Metadata
@using BlazorApp.Pages.Event
@inherits BlazorApp.Pages.Common.DrawerPageBase<k8s.Models.V1IngressClass>
@if (IngressClass != null)
{
    <IngressClassAction Item="IngressClass" MenuMode="MenuMode.Horizontal"></IngressClassAction>
    <Divider Orientation="left" Style="font-weight:bold">@L["Metadata"]</Divider>
    <MetadataView Item="IngressClass.Metadata" ExplainFieldPrefix="ingressClass"></MetadataView>
    <Divider Orientation="left" Style="font-weight:bold">@L["Spec"]</Divider>
    <HTable Bordered Column="1">

        <PropertySimpleView Title=@L["Controller"] Item="@IngressClass.Spec.Controller"
                            ExplainField="ingressClass.spec.controller">
        </PropertySimpleView>
        <PropertySimpleView Title=@L["Parameters"] Item="@IngressClass.Spec.Parameters"
                            ExplainField="ingressClass.spec.parameters" ShowInJson="true">
        </PropertySimpleView>
    </HTable>
    <MiniEventListView Uid="@IngressClass.Metadata.Uid"></MiniEventListView>
}
