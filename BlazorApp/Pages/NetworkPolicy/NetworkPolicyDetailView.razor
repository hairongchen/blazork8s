@using k8s.Models
@using BlazorApp.Pages.Common.Metadata
@using BlazorApp.Pages.Event
@using BlazorApp.Pages.Common.Html.HTable
@using BlazorApp.Pages.Common.Html
@inherits BlazorApp.Pages.Common.DrawerPageBase<V1NetworkPolicy>
@if (NetworkPolicy != null)
{
    <NetworkPolicyAction Item="NetworkPolicy" MenuMode="MenuMode.Horizontal"  ></NetworkPolicyAction>
    <Divider Orientation="left" Style="font-weight:bold">Metadata</Divider>
    <MetadataView Item="NetworkPolicy.Metadata"  ExplainFieldPrefix="networkPolicy"></MetadataView>
    <Divider Orientation="left" Style="font-weight:bold">Spec</Divider>
    <HTable Bordered Column="1">
        <HTableColumn Title="Name">
            @NetworkPolicy.Name()
        </HTableColumn>
                <PropertySimpleView Title="Egress" Item="@NetworkPolicy.Spec.Egress" ExplainField="networkPolicy.spec.egress" ShowInJson="true"></PropertySimpleView>
                <PropertySimpleView Title="Ingress" Item="@NetworkPolicy.Spec.Ingress" ExplainField="networkPolicy.spec.ingress" ShowInJson="true"></PropertySimpleView>
                <PropertySimpleView Title="PodSelector" Item="@NetworkPolicy.Spec.PodSelector" ExplainField="networkPolicy.spec.podSelector"  ShowInJson="true" ></PropertySimpleView>
                <PropertySimpleView Title="PolicyTypes" Item="@NetworkPolicy.Spec.PolicyTypes" ExplainField="networkPolicy.spec.policyTypes" ShowInJson="true"></PropertySimpleView>
    </HTable>
 <Divider Orientation="left" Style="font-weight:bold">Status</Divider>
    <HTable Bordered Column="1">
    </HTable>
    <MiniEventListView Uid="@NetworkPolicy.Metadata.Uid"></MiniEventListView>
}
