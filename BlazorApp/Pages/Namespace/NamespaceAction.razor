@using BlazorApp.Pages.Common
@using k8s.Models
@inherits BlazorApp.Pages.Common.PageBase

<ShareMenuItem T="V1Namespace" Item="Item" MenuMode="MenuMode">
    @if (MenuMode == MenuMode.Vertical)
    {
        <MenuItem OnClick=@(() => OnResourceClick(Item))>@L["ResourceQuota"]</MenuItem>
        <MenuItem OnClick=@(() => OnLimitRangeClick(Item))>@L["LimitRange"]</MenuItem>
    }
    @if (MenuMode == MenuMode.Horizontal)
    {
        <Button OnClick=@(() => OnResourceClick(Item))>@L["ResourceQuota"]</Button>
        <Button OnClick=@(() => OnLimitRangeClick(Item))>@L["LimitRange"]</Button>
    }
</ShareMenuItem>
