@using k8s.Models
@inherits BlazorApp.Pages.Common.PageBase

<SimpleSelect DefaultValue="" Style="width:200px;" OnSelectedItemChanged="HandleChange">
    <SelectOptions>
        <SimpleSelectOption Value="" Label=@(L["All Namespace"])></SimpleSelectOption>
        @if (_ns != null)
        {
            foreach (var n in _ns)
            {
                <SimpleSelectOption Value="@n.Name()" Label="@(n.Name())"></SimpleSelectOption>
            }
        }
    </SelectOptions>
</SimpleSelect>
