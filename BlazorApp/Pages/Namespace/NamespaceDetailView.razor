@using Mapster
@using BlazorApp.Pages.Common.Metadata
@using BlazorApp.Pages.Event
@using BlazorApp.Pages.Common.Html.HTable
@using BlazorApp.Pages.Common
@using k8s.Models
@inherits BlazorApp.Pages.Common.DrawerPageBase<k8s.Models.V1Namespace>
@if (Namespace != null)
{
    <NamespaceAction Item="Namespace" MenuMode="MenuMode.Horizontal"></NamespaceAction>
    <Divider Orientation="left" Style="font-weight:bold">Metadata</Divider>
    <MetadataView Item="Namespace.Metadata" ExplainFieldPrefix="namespace"></MetadataView>
    <Divider Orientation="left" Style="font-weight:bold">Spec</Divider>
    <HTable Bordered Column="1">
        <PropertyListView Title="Finalizers" Items="@Namespace.Spec.Finalizers" ExplainField="namespace.spec.finalizers" T="string"></PropertyListView>
    </HTable>
    <Divider Orientation="left" Style="font-weight:bold">Status</Divider>
    <HTable Bordered Column="1">
        <ConditionsView Conditions="@(Namespace.Status.Conditions.Adapt<IList<V1Condition>>())" ExplainField="namespace.status.conditions"></ConditionsView>
        <PropertyOptionView Title="Phase" Item="@Namespace.Status.Phase" ExplainField="namespace.status.phase" Options="@(new []{"Active", "Terminating"})"></PropertyOptionView>
    </HTable>
    <MiniEventListView Uid="@Namespace.Metadata.Uid"></MiniEventListView>
}
