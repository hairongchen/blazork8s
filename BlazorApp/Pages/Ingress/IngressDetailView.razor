@using k8s.Models
@using BlazorApp.Pages.Common.Metadata
@using BlazorApp.Pages.Event
@inherits BlazorApp.Pages.Common.DrawerPageBase<V1Ingress>
@if (Ingress != null)
{
    <IngressAction Item="Ingress" MenuMode="MenuMode.Horizontal"  ></IngressAction>
    <Divider Orientation="left" Style="font-weight:bold">Metadata</Divider>
    <MetadataView Item="Ingress.Metadata"  ExplainFieldPrefix="ingress"></MetadataView>
    <Divider Orientation="left" Style="font-weight:bold">Spec</Divider>
    <Descriptions Bordered Column="1">
        <DescriptionsItem Title="Name">
            @Ingress.Name()
        </DescriptionsItem>
                <PropertySimpleView Title="DefaultBackend" Item="@Ingress.Spec.DefaultBackend" ExplainField="ingress.spec.defaultBackend"  ShowInJson="true" ></PropertySimpleView>
                <PropertySimpleView Title="IngressClassName" Item="@Ingress.Spec.IngressClassName" ExplainField="ingress.spec.ingressClassName" ></PropertySimpleView>
                <PropertySimpleView Title="Rules" Item="@Ingress.Spec.Rules" ExplainField="ingress.spec.rules" ShowInJson="true"></PropertySimpleView>
                <PropertySimpleView Title="Tls" Item="@Ingress.Spec.Tls" ExplainField="ingress.spec.tls" ShowInJson="true"></PropertySimpleView>
    </Descriptions>
 <Divider Orientation="left" Style="font-weight:bold">Status</Divider>
    <Descriptions Bordered Column="1">
                <PropertySimpleView Title="LoadBalancer" Item="@Ingress.Status.LoadBalancer" ExplainField="ingress.status.loadBalancer"  ShowInJson="true" ></PropertySimpleView>
    </Descriptions>
    <MiniEventListView Uid="@Ingress.Metadata.Uid"></MiniEventListView>
}
