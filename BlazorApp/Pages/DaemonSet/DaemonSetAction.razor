@using BlazorApp.Pages.Common
@using k8s.Models
@inherits BlazorApp.Pages.Common.PageBase

<ShareMenuItem T="V1DaemonSet" Item="Item" MenuMode="MenuMode">
    @if (MenuMode == MenuMode.Vertical)
    {
        <MenuItem OnClick=@(() => OnRestartClick(Item))>@L["Restart"]</MenuItem>
    }
    @if (MenuMode == MenuMode.Horizontal)
    {
        <Button OnClick=@(() => OnRestartClick(Item))>@L["Restart"]</Button>
    }
</ShareMenuItem>
