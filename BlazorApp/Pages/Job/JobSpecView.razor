@using BlazorApp.Pages.Common.Html.HTable
@using BlazorApp.Pages.Common.Metadata
@using BlazorApp.Pages.Pod
@inherits BlazorApp.Pages.Common.PageBase

<HTable Bordered Column="1">
    <PropertySimpleView Title=@L["ActiveDeadlineSeconds"] Item="@JobSpec.ActiveDeadlineSeconds"
                        ExplainField="job.spec.activeDeadlineSeconds">
    </PropertySimpleView>
    <PropertySimpleView Title=@L["BackoffLimit"] Item="@JobSpec.BackoffLimit"
                        ExplainField="job.spec.backoffLimit">
    </PropertySimpleView>
    <PropertySimpleView Title=@L["BackoffLimitPerIndex"] Item="@JobSpec.BackoffLimitPerIndex"
                        ExplainField="job.spec.backoffLimitPerIndex">
    </PropertySimpleView>
    <PropertySimpleView Title=@L["CompletionMode"] Item="@JobSpec.CompletionMode"
                        ExplainField="job.spec.completionMode">
    </PropertySimpleView>
    <PropertySimpleView Title=@L["Completions"] Item="@JobSpec.Completions"
                        ExplainField="job.spec.completions">
    </PropertySimpleView>
    <PropertySimpleView Title=@L["ManualSelector"] Item="@JobSpec.ManualSelector"
                        ExplainField="job.spec.manualSelector">
    </PropertySimpleView>
    <PropertySimpleView Title=@L["MaxFailedIndexes"] Item="@JobSpec.MaxFailedIndexes"
                        ExplainField="job.spec.maxFailedIndexes">
    </PropertySimpleView>
    <PropertySimpleView Title=@L["Parallelism"] Item="@JobSpec.Parallelism"
                        ExplainField="job.spec.parallelism">
    </PropertySimpleView>
    <PropertySimpleView Title=@L["PodFailurePolicy"] Item="@JobSpec.PodFailurePolicy"
                        ExplainField="job.spec.podFailurePolicy" ShowInJson="true">
    </PropertySimpleView>
    <PropertySimpleView Title=@L["PodReplacementPolicy"] Item="@JobSpec.PodReplacementPolicy"
                        ExplainField="job.spec.podReplacementPolicy">
    </PropertySimpleView>
    <PropertySimpleView Title=@L["Suspend"] Item="@JobSpec.Suspend"
                        ExplainField="job.spec.suspend">
    </PropertySimpleView>
    <PropertySimpleView Title=@L["TtlSecondsAfterFinished"] Item="@JobSpec.TtlSecondsAfterFinished"
                        ExplainField="job.spec.ttlSecondsAfterFinished">
    </PropertySimpleView>
</HTable>
<PodTemplateView PodTemplate="@JobSpec.Template"></PodTemplateView>
