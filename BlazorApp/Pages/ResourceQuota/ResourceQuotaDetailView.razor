@using k8s.Models
@using BlazorApp.Pages.Common.Metadata
@using BlazorApp.Pages.Event
@using BlazorApp.Pages.Common;
@inherits DrawerPageBase<V1ResourceQuota>
@if (ResourceQuota != null)
{
    <ResourceQuotaAction Item="ResourceQuota" MenuMode="MenuMode.Horizontal"  ></ResourceQuotaAction>
    <Divider Orientation="left" Style="font-weight:bold">Metadata</Divider>
    <MetadataView Item="ResourceQuota" T="V1ResourceQuota" ExplainFieldPrefix="resourceQuota"></MetadataView>
    <Divider Orientation="left" Style="font-weight:bold">Spec</Divider>
    <Descriptions Bordered Column="1">
        <DescriptionsItem Title="Name">
            @ResourceQuota.Name()
        </DescriptionsItem>
                <PropertySimpleView Title="Hard" Item="@ResourceQuota.Spec.Hard" ExplainField="resourceQuota.spec.hard"  ShowInJson="true" ></PropertySimpleView>
                <PropertySimpleView Title="ScopeSelector" Item="@ResourceQuota.Spec.ScopeSelector" ExplainField="resourceQuota.spec.scopeSelector"  ShowInJson="true" ></PropertySimpleView>
                <PropertySimpleView Title="Scopes" Item="@ResourceQuota.Spec.Scopes" ExplainField="resourceQuota.spec.scopes" ShowInJson="true"></PropertySimpleView>
    </Descriptions>
 <Divider Orientation="left" Style="font-weight:bold">Status</Divider>
    <Descriptions Bordered Column="1">
                <PropertySimpleView Title="Hard" Item="@ResourceQuota.Status.Hard" ExplainField="resourceQuota.status.hard"  ShowInJson="true" ></PropertySimpleView>
                <PropertySimpleView Title="Used" Item="@ResourceQuota.Status.Used" ExplainField="resourceQuota.status.used"  ShowInJson="true" ></PropertySimpleView>
    </Descriptions>
    <MiniEventListView Uid="@ResourceQuota.Metadata.Uid"></MiniEventListView>
}