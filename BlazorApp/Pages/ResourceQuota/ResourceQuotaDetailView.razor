@using BlazorApp.Pages.Common.Metadata
@using BlazorApp.Pages.Event
@using BlazorApp.Pages.Common.Html.HTable
@using BlazorApp.Pages.Common
@using k8s.Models
@inherits BlazorApp.Pages.Common.DrawerPageBase<k8s.Models.V1ResourceQuota>
@if (ResourceQuota != null)
{
    <ResourceQuotaAction Item="ResourceQuota" MenuMode="MenuMode.Horizontal"></ResourceQuotaAction>
    <Divider Orientation="left" Style="font-weight:bold">Metadata</Divider>
    <MetadataView Item="ResourceQuota.Metadata" ExplainFieldPrefix="resourceQuota"></MetadataView>
    <Divider Orientation="left" Style="font-weight:bold">Spec</Divider>
    <HTable Bordered Column="1">
        <PropertyMapView T="ResourceQuantity" Title="Hard" Items="@ResourceQuota.Spec.Hard" ExplainField="resourceQuota.spec.hard" EveryItemOneRow="true"></PropertyMapView>
        <LabelSelectorView Title="ScopeSelector" LabelSelector="@GetSelector()"></LabelSelectorView>
        <PropertyListView Title="Scopes" Items="@ResourceQuota.Spec.Scopes" ExplainField="resourceQuota.spec.scopes" T="string"></PropertyListView>
    </HTable>
    <Divider Orientation="left" Style="font-weight:bold">Status</Divider>
    <HTable Bordered Column="1">
        <PropertyMapView T="ResourceQuantity" Title="Hard" Items="@ResourceQuota.Status.Hard" ExplainField="resourceQuota.status.hard"  EveryItemOneRow="true"></PropertyMapView>
        <PropertyMapView T="ResourceQuantity" Title="Used" Items="@ResourceQuota.Status.Hard" ExplainField="resourceQuota.status.used"  EveryItemOneRow="true"></PropertyMapView>
    </HTable>
    <MiniEventListView Uid="@ResourceQuota.Metadata.Uid"></MiniEventListView>
}
