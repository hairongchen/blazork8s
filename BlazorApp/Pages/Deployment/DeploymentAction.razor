@if (MenuMode == MenuMode.Vertical)
{
    <Dropdown >
        <Overlay  >
            <Menu>
                <MenuItem OnClick="@(() => OnYamlClick(Item))">Yaml</MenuItem>
                <MenuItem OnClick="@(() => OnDocClick(Item))">Doc</MenuItem>
                <MenuItem OnClick="@(() => OnRestartClick(Item))">Restart</MenuItem>
                <MenuItem OnClick="@(() => OnScaleClick(Item))">Scale</MenuItem>
                <MenuItem >
                    <Popconfirm Title="确定删除吗"
                                OnConfirm="() => OnDeleteClick(Item)"
                                OkText="Yes"
                                CancelText="No">
                        删除
                    </Popconfirm>
                </MenuItem>
            </Menu>
        </Overlay>
        <ChildContent>
            <Button>操作 <Icon Type="down"/></Button>
        </ChildContent>
    </Dropdown>
}
@if (MenuMode == MenuMode.Horizontal)
{
    <Alert Type="@AlertType.Success">
        <Button OnClick="@(() => OnYamlClick(Item))">Yaml</Button>
        <Button OnClick="@(() => OnDocClick(Item))">Doc</Button>
        <Button OnClick="@(() => OnRestartClick(Item))">Restart</Button>
        <Button OnClick="@(() => OnScaleClick(Item))">Scale</Button>
    </Alert>
}
