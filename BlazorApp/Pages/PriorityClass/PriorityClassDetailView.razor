@using k8s.Models
@using BlazorApp.Pages.Common.Metadata
@using BlazorApp.Pages.Event
@using BlazorApp.Pages.Common.Html.HTable
@using BlazorApp.Pages.Common.Html
@inherits BlazorApp.Pages.Common.DrawerPageBase<V1PriorityClass>
@if (PriorityClass != null)
{
    <PriorityClassAction Item="PriorityClass" MenuMode="MenuMode.Horizontal"  ></PriorityClassAction>
    <Divider Orientation="left" Style="font-weight:bold">Metadata</Divider>
    <MetadataView Item="PriorityClass.Metadata"  ExplainFieldPrefix="priorityClass"></MetadataView>
    <Divider Orientation="left" Style="font-weight:bold">Spec</Divider>
    <HTable Bordered Column="1">
        <HTableColumn Title="Name">
            @PriorityClass.Name()
        </HTableColumn>
                <PropertySimpleView Title="Description" Item="@PriorityClass.Description" ExplainField="priorityClass.description" ></PropertySimpleView>
                <PropertySimpleView Title="GlobalDefault" Item="@PriorityClass.GlobalDefault" ExplainField="priorityClass.globalDefault" ></PropertySimpleView>
                <PropertySimpleView Title="PreemptionPolicy" Item="@PriorityClass.PreemptionPolicy" ExplainField="priorityClass.preemptionPolicy" ></PropertySimpleView>
                <PropertySimpleView Title="Value" Item="@PriorityClass.Value" ExplainField="priorityClass.value" ></PropertySimpleView>
    </HTable>
 <Divider Orientation="left" Style="font-weight:bold">Status</Divider>
    <HTable Bordered Column="1">
    </HTable>
    <MiniEventListView Uid="@PriorityClass.Metadata.Uid"></MiniEventListView>
}
