<RingProgress Data="@CalcLoad()" Config="_loadConfig"></RingProgress>

@code {

    [Parameter] public double Numerator { get; set; } = 1;

    [Parameter] public double Denominator { get; set; } = 1;


    private double CalcLoad()
    {
        if (Denominator == 0)
        {
            return 0;
        }

        return Numerator / Denominator;
    }

    private RingProgressConfig _loadConfig = new RingProgressConfig
    {
        Width = 50,
        Height = 50,
        Color = new[]
        {
            "#FF4D4F", "#53C419"
        },
    };

}
