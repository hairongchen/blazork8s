@using k8s.Models
@using BlazorApp.Pages.Common.Metadata
@using BlazorApp.Pages.Event
@inherits BlazorApp.Pages.Common.DrawerPageBase<V1ClusterRoleBinding>
@if (ClusterRoleBinding != null)
{
    <ClusterRoleBindingAction Item="ClusterRoleBinding" MenuMode="MenuMode.Horizontal"  ></ClusterRoleBindingAction>
    <Divider Orientation="left" Style="font-weight:bold">Metadata</Divider>
    <MetadataView Item="ClusterRoleBinding.Metadata"  ExplainFieldPrefix="clusterRoleBinding"></MetadataView>
    <Divider Orientation="left" Style="font-weight:bold">Spec</Divider>
    <HTable Bordered Column="1">
        <HTableColumn Title="Name">
            @ClusterRoleBinding.Name()
        </HTableColumn>
                <PropertySimpleView Title="ApiGroup" Item="@ClusterRoleBinding.RoleRef.ApiGroup" ExplainField="clusterRoleBinding.roleRef.apiGroup" ></PropertySimpleView>
                <PropertySimpleView Title="Name" Item="@ClusterRoleBinding.RoleRef.Name" ExplainField="clusterRoleBinding.roleRef.name" ></PropertySimpleView>
                <PropertySimpleView Title="Subjects" Item="@ClusterRoleBinding.Subjects" ExplainField="clusterRoleBinding.subjects" ShowInJson="true"></PropertySimpleView>
    </HTable>
 <Divider Orientation="left" Style="font-weight:bold">Status</Divider>
    <HTable Bordered Column="1">
    </HTable>
    <MiniEventListView Uid="@ClusterRoleBinding.Metadata.Uid"></MiniEventListView>
}
