@page "/StorageClass"
@using k8s.Models
@using BlazorApp.Pages.Common.Html.HTable
@using BlazorApp.Pages.Common.Metadata
@using BlazorApp.Pages.Common
@inherits BlazorApp.Pages.Common.TableBase<V1StorageClass>
@if (TableData.PagedItems != null)
{
    <HTable Class="wideTable">
        <HTr>
            <HTd >
                <SearchToolBar Title="StorageClass" Count="@TableData.Total"
                               OnSearch="OnSearchHandler"
                               OnNsSelected="OnNsSelectedHandler">
                </SearchToolBar>
            </HTd>
        </HTr>
        <HTr>
            <HTd >
                <Table TItem="V1StorageClass"
                       DataSource="@TableData.PagedItems"
                       Size=@TableSize.Small Bordered="true"
                       Total="TableData.Total"
                       @bind-PageIndex="TableData.PageIndex"
                       @bind-PageSize="TableData.PageSize"
                       @bind-SelectedRows="TableData.SelectedRows"
                       Loading="TableData.Loading"
                       OnChange="OnPageChangeHandler">
                    <Selection Key="@(context.Name())"/>
                    <AntDesign.Column Field="@context.Name()" Title="Name">
                        <Button OnClick="@(() => OnItemNameClick(context))" Type="@ButtonType.Link">@context.Name()</Button>
                    </AntDesign.Column>
                    <AntDesign.Column Title="Provisioner" TData="string">
                        <ColorfulTag>@context.Provisioner</ColorfulTag>
                    </AntDesign.Column>
                    <AntDesign.Column Title="ReclaimPolicy" TData="string">
                        <ColorfulTag>@context.ReclaimPolicy</ColorfulTag>
                    </AntDesign.Column>
                    <AntDesign.Column Title="VolumeBindingMode" TData="string">
                        <ColorfulTag>@context.VolumeBindingMode</ColorfulTag>
                    </AntDesign.Column>
                    <AntDesign.Column Title="VolumeBindingMode" TData="string">
                        <ColorfulTag>@(context.AllowVolumeExpansion ?? false)</ColorfulTag>
                    </AntDesign.Column>
                    <AntDesign.Column Title="Age" TData="string">
                        <AgeView Age="@context.CreationTimestamp()"></AgeView>
                    </AntDesign.Column>
                    <ActionColumn Title="Action" Width="200" Fixed="right">
                        <StorageClassAction Item="@context"></StorageClassAction>
                    </ActionColumn>
                </Table>
            </HTd>
        </HTr>
    </HTable>
    <ResourceWatcher OnResourceChanged="OnResourceChanged" T="V1StorageClass"></ResourceWatcher>
}
