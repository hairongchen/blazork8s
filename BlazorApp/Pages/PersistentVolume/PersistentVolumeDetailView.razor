@using k8s.Models
@using BlazorApp.Pages.Common.Metadata
@using BlazorApp.Pages.Event
@inherits FeedbackComponent<k8s.Models.V1PersistentVolume, bool>
@if (Item != null)
{
    <PersistentVolumeAction Item="Item" MenuMode="MenuMode.Horizontal"  ></PersistentVolumeAction>
    <MetadataView Item="Item" T="V1PersistentVolume"></MetadataView>
    <Descriptions Bordered Column="1">
        <DescriptionsItem Title="Name"  LabelStyle="width:120px">
            @Item.Name()
        </DescriptionsItem>
    </Descriptions>
    <MiniEventListView Uid="@Item.Metadata.Uid"></MiniEventListView>
}
