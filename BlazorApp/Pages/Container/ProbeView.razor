@using BlazorApp.Pages.Common
@using BlazorApp.Pages.Common.Html
@inherits BlazorApp.Pages.Common.PageBase

@if (Probe != null)
{
    <HTableColumn Title=@L[ProbeType] ExplainField="@ExplainField">
        <Divider>@L["ProbeType"]</Divider>
        <ProbeKindStatus Probe="Probe"></ProbeKindStatus>
        <Divider>@L["ProbeConfig"]</Divider>
        <ColorfulTag>@($"delay={Probe.InitialDelaySeconds}s")</ColorfulTag>
        <ColorfulTag>@($"timeout={Probe.TimeoutSeconds}s")</ColorfulTag>
        <ColorfulTag>@($"period={Probe.PeriodSeconds}s")</ColorfulTag>
        <ColorfulTag>@($"#success={Probe.SuccessThreshold}")</ColorfulTag>
        <ColorfulTag>@($"#failure={Probe.FailureThreshold}")</ColorfulTag>
    </HTableColumn>
}
