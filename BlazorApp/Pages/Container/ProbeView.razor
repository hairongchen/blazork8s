@using BlazorApp.Pages.Common.Html
@inherits BlazorApp.Pages.Common.PageBase

@if (Probe != null)
{
    <HTableColumn Title="@ProbeType">
        <Divider>@L["ProbeType"]</Divider>
        <ProbeKindStatus Probe="Probe"></ProbeKindStatus>
        <Divider>@L["ProbeConfig"]</Divider>
        <Tag>@($"delay={Probe.InitialDelaySeconds}s")</Tag>
        <Tag>@($"timeout={Probe.TimeoutSeconds}s")</Tag>
        <Tag>@($"period={Probe.PeriodSeconds}s")</Tag>
        <Tag>@($"#success={Probe.SuccessThreshold}")</Tag>
        <Tag>@($"#failure={Probe.FailureThreshold}")</Tag>
    </HTableColumn>
}
