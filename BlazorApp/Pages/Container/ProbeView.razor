@using BlazorApp.Pages.Common
@if (Probe != null)
{
    <DescriptionsItem Title="@ProbeType">
        <ProbeKindStatus Probe="Probe" ></ProbeKindStatus>

        <RandomColorHr Color="PresetColor.Green"></RandomColorHr>
        <Tag>delay=@Probe.InitialDelaySeconds</Tag>
        <Tag>timeout=@Probe.TimeoutSeconds</Tag>
        <Tag>period=@Probe.PeriodSeconds</Tag>
        <Tag>#success=@Probe.SuccessThreshold</Tag>
        <Tag>#failure=@Probe.FailureThreshold</Tag>
    </DescriptionsItem>
}
