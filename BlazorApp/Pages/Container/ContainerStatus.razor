@using Extension.k8s
@if (Pod != null && Pod.Status.ContainerStatuses != null)
{
    <Space>
        @foreach (var cs in Pod.Status.ContainerStatuses)
        {
            <SpaceItem>
                <Tooltip Title="@(cs.ReadySummary())">
                    @if (cs.Ready)
                    {
                        <Badge Status="success"/>
                    }
                    else
                    {
                        <Badge Status="error"/>
                    }
                </Tooltip>
            </SpaceItem>
        }
    </Space>
}
