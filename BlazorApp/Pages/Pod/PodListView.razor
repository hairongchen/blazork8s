@using k8s.Models
@using Extension.k8s
@using BlazorApp.Pages.Common.metadata
@if (Pods.Count > 0)
{
    <Divider Orientation="left" Style="font-weight:bold">Pod</Divider>
    <Table TItem="V1Pod" DataSource="@Pods"
           HidePagination="true" PageSize="5000"
           Size=@TableSize.Small Bordered="true">
        <AntDesign.Column Title="Name" TData="string">
            <Button OnClick="@(() => OnPodNameClick(context))" Type="@ButtonType.Link">@context.Name()</Button>
        </AntDesign.Column>
        <AntDesign.Column Sortable="true" TData="string" Title="NameSpace" Field="@context.Namespace()"/>
        <AntDesign.Column Sortable="true" TData="string" Title="Ready">@context.ReadySummary()</AntDesign.Column>
        <AntDesign.Column Sortable="true" TData="string" Title="Status">
            <StatusView Status=@context.Status()></StatusView>
        </AntDesign.Column>
    </Table>
}
