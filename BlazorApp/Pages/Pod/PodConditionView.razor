@using Extension
@using BlazorApp.Pages.Common.Html
@if (Conditions != null)
{
    <HTableColumn Title="Conditions" ExplainField="pod.status.conditions">
        @foreach (var ns in Conditions)
        {
            @if (ns.Status == "True")
            {
                <Tag Icon="check" PresetColor=@PresetColor.Blue>@ns.Type</Tag>
            }
            else
            {
                <Tooltip Title="@($"{ns.Reason}:{ns.Message}  {ns.LastTransitionTime.AgeFromUtc()} ago (at {ns.LastTransitionTime}).")">
                    <Tag Icon="close" PresetColor=@PresetColor.Red>@ns.Type</Tag>
                </Tooltip>
            }
        }
    </HTableColumn>
}
