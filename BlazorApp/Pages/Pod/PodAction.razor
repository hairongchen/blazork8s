@if (MenuMode == MenuMode.Vertical)
{
    <Dropdown >
        <Overlay >
            <Menu >
                <MenuItem OnClick="@(() => OnPodLogClick(PodItem))">日志</MenuItem>
                <MenuItem OnClick="@(() => OnPodExecClick(PodItem))">Exec</MenuItem>
                <MenuItem OnClick="@(() => OnYamlClick(PodItem))">Yaml</MenuItem>
                <MenuItem OnClick="@(() => OnDocClick(PodItem))">Doc</MenuItem>
                <MenuItem >
                    <Popconfirm Title="确定删除吗"
                                OnConfirm="() => OnPodDeleteClick(PodItem)"
                                OkText="Yes"
                                CancelText="No">
                        删除
                    </Popconfirm>
                </MenuItem>
                <MenuItem OnClick="@(() => OnAnalyzeClick(PodItem))">故障分析</MenuItem>
                <MenuItem OnClick="@(() => OnSecurityClick(PodItem))">安全检测</MenuItem>
            </Menu>
        </Overlay>
        <ChildContent>
            <Button>操作 <Icon Type="down"/></Button>
        </ChildContent>
    </Dropdown>
}
@if (MenuMode == MenuMode.Horizontal)
{
    <Alert Type="@AlertType.Success">
        <Button OnClick="@(() => OnPodLogClick(PodItem))">日志</Button>
        <Button OnClick="@(() => OnPodExecClick(PodItem))">Exec</Button>
        <Button OnClick="@(() => OnYamlClick(PodItem))">Yaml</Button>
        <Button OnClick="@(() => OnDocClick(PodItem))">Doc</Button>

    </Alert>
}
