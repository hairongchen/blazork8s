@using k8s.Models
@using BlazorApp.Pages.Common.Metadata
@inherits BlazorApp.Pages.Common.PageBase

@if (HostPath != null)
{
    <PropertyOptionView Title=@L["Type"] Item="@HostPath.Type" Options='@(new[] { "", "DirectoryOrCreate", "Directory", "FileOrCreate", "File", "Socket", "CharDevice", "BlockDevice" })' ExplainField=@(FieldPrefix + ".hostPath.type")></PropertyOptionView>
    <PropertySimpleView Title=@L["Path"] ExplainField=@(FieldPrefix + ".hostPath.path") Item="@HostPath.Path"></PropertySimpleView>
}


@code {

    [Parameter]
    public V1HostPathVolumeSource HostPath { get; set; }

    [Parameter]
    public string FieldPrefix { get; set; }

}
