@using k8s.Models
@using BlazorApp.Pages.Common.Metadata
@inherits BlazorApp.Pages.Common.PageBase

@if (Csi != null)
{
    <PropertySimpleView Title=@L["Driver"] ExplainField=@(FieldPrefix + ".csi.driver") Item="@Csi.Driver"></PropertySimpleView>
    <PropertySimpleView Title=@L["VolumeAttributes"] ExplainField=@(FieldPrefix + ".csi.volumeAttributes") Item="@Csi.VolumeAttributes" ShowInJson="true"></PropertySimpleView>
    <PropertySimpleView Title=@L["FsType"] ExplainField=@(FieldPrefix + ".csi.fsType") Item="@Csi.FsType"></PropertySimpleView>
    <PropertySimpleView Title=@L["ReadOnly"] ExplainField=@(FieldPrefix + ".csi.readOnly") Item="@Csi.ReadOnlyProperty"></PropertySimpleView>
    <PropertySimpleGenericsView Title=@L["NodePublishSecretRef"] ExplainField=@(FieldPrefix + ".csi.nodePublishSecretRef") Item="@Csi.NodePublishSecretRef" Key="Name" T="V1LocalObjectReference"></PropertySimpleGenericsView>
}


@code {


    [Parameter]
    public V1CSIVolumeSource Csi { get; set; }

    [Parameter]
    public string FieldPrefix { get; set; }

}
