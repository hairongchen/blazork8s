@using k8s.Models
@using BlazorApp.Pages.Common.Metadata
@inherits BlazorApp.Pages.Common.PageBase

@if (Iscsi != null)
{
    <PropertySimpleView Title=@L["Iqn"] ExplainField=@(FieldPrefix + ".iscsi.iqn") Item="@Iscsi.Iqn"></PropertySimpleView>
    <PropertyListView Title=@L["Portals"] ExplainField=@(FieldPrefix + ".iscsi.portals") Items="@Iscsi.Portals" T="string"></PropertyListView>
    <PropertySimpleView Title=@L["TargetPortal"] ExplainField=@(FieldPrefix + ".iscsi.targetPortal") Item="@Iscsi.TargetPortal"></PropertySimpleView>
    <PropertySimpleView Title=@L["Lun"] ExplainField=@(FieldPrefix + ".iscsi.lun") Item="@Iscsi.Lun"></PropertySimpleView>
    <PropertySimpleView Title=@L["FsType"] ExplainField=@(FieldPrefix + ".iscsi.fsType") Item="@Iscsi.FsType"></PropertySimpleView>
    <PropertySimpleView Title=@L["ReadOnly"] ExplainField=@(FieldPrefix + ".iscsi.readOnly") Item="@Iscsi.ReadOnlyProperty"></PropertySimpleView>
    <PropertySimpleView Title=@L["ChapAuthDiscovery"] ExplainField=@(FieldPrefix + ".iscsi.chapAuthDiscovery") Item="@Iscsi.ChapAuthDiscovery"></PropertySimpleView>
    <PropertySimpleView Title=@L["ChapAuthSession"] ExplainField=@(FieldPrefix + ".iscsi.chapAuthSession") Item="@Iscsi.ChapAuthSession"></PropertySimpleView>
    <PropertySimpleGenericsView Title=@L["SecretRef"] ExplainField=@(FieldPrefix + ".iscsi.SecretRef") Item="@Iscsi.SecretRef" Key="Name" T="V1LocalObjectReference"></PropertySimpleGenericsView>
}


@code {

    [Parameter]
    public V1ISCSIVolumeSource Iscsi { get; set; }

    [Parameter]
    public string FieldPrefix { get; set; }

}
