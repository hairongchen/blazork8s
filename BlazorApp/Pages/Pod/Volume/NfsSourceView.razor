@using k8s.Models
@using BlazorApp.Pages.Common.Metadata
@inherits BlazorApp.Pages.Common.PageBase

@if (Nfs != null)
{
    <PropertySimpleView Title=@L["Server"] ExplainField=@(FieldPrefix + ".nfs.server") Item="@Nfs.Server"></PropertySimpleView>
    <PropertySimpleView Title=@L["Path"] ExplainField=@(FieldPrefix + ".nfs.path") Item="@Nfs.Path"></PropertySimpleView>
    <PropertySimpleView Title=@L["ReadOnly"] ExplainField=@(FieldPrefix + ".nfs.readOnly") Item="@Nfs.ReadOnlyProperty"></PropertySimpleView>
}


@code {

    [Parameter]
    public V1NFSVolumeSource Nfs { get; set; }

    [Parameter]
    public string FieldPrefix { get; set; }

}
