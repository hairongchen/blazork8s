@using k8s.Models
@using BlazorApp.Pages.Common.Metadata
@inherits BlazorApp.Pages.Common.PageBase

@if (Local != null)
{
    <PropertyOptionView Title=@L["Type"] Item="@Local.FsType" Options='@(new[] { "", "xfs", "ntfs", "ext4", "ext3", "ext2", "btrfs", "hpfs", "vfat", "xfs", "jfs", "reiserfs", "swap" })' ExplainField=@(FieldPrefix + ".hostPath.type")></PropertyOptionView>
    <PropertySimpleView Title=@L["Path"] ExplainField=@(FieldPrefix + ".hostPath.path") Item="@Local.Path"></PropertySimpleView>
}


@code {

    [Parameter]
    public V1LocalVolumeSource Local { get; set; }

    [Parameter]
    public string FieldPrefix { get; set; }

}
