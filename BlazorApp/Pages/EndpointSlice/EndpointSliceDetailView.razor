@using k8s.Models
@using BlazorApp.Pages.Common.Metadata
@using BlazorApp.Pages.Event
@inherits BlazorApp.Pages.Common.DrawerPageBase<V1EndpointSlice>
@if (EndpointSlice != null)
{
    <EndpointSliceAction Item="EndpointSlice" MenuMode="MenuMode.Horizontal"  ></EndpointSliceAction>
    <Divider Orientation="left" Style="font-weight:bold">Metadata</Divider>
    <MetadataView Item="EndpointSlice.Metadata" ExplainFieldPrefix="endpointSlice"></MetadataView>
    <Divider Orientation="left" Style="font-weight:bold">Spec</Divider>
    <Descriptions Bordered Column="1">
        <DescriptionsItem Title="Name">
            @EndpointSlice.Name()
        </DescriptionsItem>
                <PropertySimpleView Title="AddressType" Item="@EndpointSlice.AddressType" ExplainField="endpointSlice.addressType" ></PropertySimpleView>
                <PropertySimpleView Title="Ports" Item="@EndpointSlice.Ports" ExplainField="endpointSlice.ports" ShowInJson="true"></PropertySimpleView>
    </Descriptions>
 <Divider Orientation="left" Style="font-weight:bold">Status</Divider>
    <Descriptions Bordered Column="1">
    </Descriptions>
    <MiniEventListView Uid="@EndpointSlice.Metadata.Uid"></MiniEventListView>
}
