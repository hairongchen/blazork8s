@using k8s.Models
@using BlazorApp.Pages.Common.Html.HTable
@using BlazorApp.Pages.Service
@using BlazorApp.Utils
@if (Ports != null)
{
    <Divider Orientation="left" Style="font-weight:bold">Ports</Divider>
    <HTable Bordered Column="1">
        <ServicePortsView Ports="@(AutoMapperHelper<Corev1EndpointPort>.MapToServicePorts(Ports))"></ServicePortsView>
    </HTable>
}

@code {

    [Parameter]
    public IList<Corev1EndpointPort> Ports { get; set; }

}
