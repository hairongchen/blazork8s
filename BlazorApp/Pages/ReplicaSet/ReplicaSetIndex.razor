@page "/ReplicaSets"
@using k8s.Models
@using Extension
@using BlazorApp.Pages.Workload
@using BlazorApp.Pages.Common
@inherits BlazorApp.Pages.Common.TableBase<V1ReplicaSet>
@if (TableDataHelper.PagedItems != null)
{
    <Card Bordered="false" Hoverable="true">
        <TitleTemplate>
            <SearchToolBar Title="Replica Sets" Count="@TableDataHelper.Total"
                           OnSearch="OnSearchHandler"
                           OnNsSelected="OnNsSelectedHandler">
            </SearchToolBar>
        </TitleTemplate>
        <ChildContent>
            <Body>

            <Table TItem="V1ReplicaSet"
                   DataSource="@TableDataHelper.PagedItems"
                   Size=@TableSize.Small Bordered="true"
                   Total="TableDataHelper.Total"
                   @bind-PageIndex="TableDataHelper.PageIndex"
                   @bind-PageSize="TableDataHelper.PageSize"
                   @bind-SelectedRows="TableDataHelper.SelectedRows"
                   Loading="TableDataHelper.Loading"
                   OnChange="OnPageChangeHandler">
                <Selection Key="@(context.Name())"/>
                <AntDesign.Column Field="@context.Name()" Title="Name">
                    <Button OnClick="@(() => OnRsClick(context))" Type="@ButtonType.Link">@context.Name()</Button>
                </AntDesign.Column>
                <AntDesign.Column Field="@context.Namespace()" Title="Namespace"/>

                <AntDesign.Column Title="ControllerBy" TData="string">
                    <ControllerBy Owner="@context.OwnerReferences()"></ControllerBy>
                </AntDesign.Column>
                <AntDesign.Column Title="Desired" TData="int">
                    @context.Status.Replicas
                </AntDesign.Column>
                <AntDesign.Column Title="Current" TData="int">
                    @(context.Status.AvailableReplicas ?? 0)
                </AntDesign.Column>
                <AntDesign.Column Title="Ready" TData="int">
                    @(context.Status.ReadyReplicas ?? 0)
                </AntDesign.Column>


                <AntDesign.Column Title="Age" TData="string">
                    @context.CreationTimestamp()?.AgeFromUtc()
                </AntDesign.Column>

            </Table>
            </Body>
        </ChildContent>

    </Card>
    <ResourceWatcher OnResourceChanged="OnResourceChanged" T="V1ReplicaSet"></ResourceWatcher>
}
