@page "/MyDiagram"
@if (Diagram != null)
{
    <div class="diagram-container">
        <CascadingValue Value="Diagram">
            <DiagramCanvas>
                <Widgets>
                    <GridWidget Size="25" Mode="GridMode.Line" ZoomThreshold="0.5"></GridWidget>
                </Widgets>
            </DiagramCanvas>
        </CascadingValue>
    </div>
}
